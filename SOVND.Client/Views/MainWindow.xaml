<Window x:Class="SOVND.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        xmlns:med="clr-namespace:System.Windows.Media"
        xmlns:local="clr-namespace:SOVND.Client"
        xmlns:spotify="clr-namespace:SpotifyClient;assembly=SpotifyClient"
        xmlns:lib="clr-namespace:SOVND.Lib;assembly=SOVND.Lib"
        xmlns:models="clr-namespace:SOVND.Lib.Models;assembly=SOVND.Lib"
        xmlns:w="clr-namespace:System.Windows.Workarounds"
        xmlns:util="clr-namespace:SOVND.Client.Util"
        mc:Ignorable="d"
        Title="SOVND" Height="550" Width="900">
    
    <Window.Resources>
        <med:ImageConverter x:Key="imageConverter" />
        
        <Style TargetType="Button" x:Key="VectorButtonStyle">
            <Style.Resources>
                <Style TargetType="Path">
                    <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"/>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                </Style>
            </Style.Resources>

            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF000000" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Foreground" Value="#77000000" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <Button
                Grid.Column="0"
                Click="NewChannel">New Channel</Button>
            
            <ListBox
                Grid.Row="1"
                x:Name="channelbox"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectionChanged="Channelbox_SelectionChanged">
                <ListBox.Resources>
                    <DataTemplate DataType="{x:Type models:Channel}">
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Name}" TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="{Binding Path=Description}" TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.Resources>
            </ListBox>
        </Grid>
        
	    <GridSplitter Width="3" VerticalContentAlignment="Stretch"
		          HorizontalAlignment="Center"
		          ResizeDirection="Columns"
		          ShowsPreview="True"
		          Grid.Column="1"/>
        
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBox 
                Grid.Row="0"
                x:Name="tbSearch"
                ToolTip="Search for a track"
                TextChanged="TextBox_TextChanged">
                    <util:WatermarkService.Watermark>
                        <TextBlock>Search for a track to add</TextBlock>
                    </util:WatermarkService.Watermark>
            </TextBox>

            <ListBox
                Grid.Row="1"
                x:Name="lbPlaylist"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                HorizontalContentAlignment="Stretch">
                <ListBox.Resources>
                    <DataTemplate DataType="{x:Type models:Song}">
                        <!-- This is a song in the playlist -->
                        <Border Name="border" BorderBrush="Gray" BorderThickness="1" Padding="3" Margin="3">
                            <DockPanel>
                                <Image 
                                    DockPanel.Dock="Left"
                                    Height="60"
                                    Margin="3"
                                    Source="{ Binding Path=track.AlbumArt, Converter={StaticResource imageConverter} }" />
                                
                                <StackPanel DataContext="{Binding Path=track}" ClipToBounds="True">
                                    <TextBlock Text="{Binding Path=Name}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding Path=Album.Name}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding Path=AllArtists}" TextTrimming="CharacterEllipsis" />
                                </StackPanel>

                                <StackPanel
                                    HorizontalAlignment="Right"
                                    DockPanel.Dock="Right" 
                                    Orientation="Horizontal">
                                    <Button
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource VectorButtonStyle}"
                                        Click="VoteUp_Click"
                                        Margin="3">
                                        <StackPanel Height="55">
                                            <Canvas Width="28" Height="32" HorizontalAlignment="Center">
                                                <Path Width="28" Height="32" Stretch="Fill"
                                                      Data="F1 M 34,57L 42,57L 42,32.25L 52,42.25L 52,31.75L 38,17.75L 24,31.75L 24,42.25L 34,32.25L 34,57 Z" >
                                                    <Path.RenderTransform>  
                                                        <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Canvas>
                                            <TextBlock
                                                Text="{Binding Path=Votes}"
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                FontSize="16"/>
                                        </StackPanel>
                                    </Button>
                              
                                    <Button
                                        DockPanel.Dock="Right"
                                        Click="Del_Click"
                                        Margin="3">
                                        DEL
                                    </Button>
                                    
                                    <Button
                                        DockPanel.Dock="Right"
                                        Click="Blk_Click"
                                        Margin="3">
                                        BLK
                                    </Button>
                                    
                                    <Button
                                        Style="{StaticResource VectorButtonStyle}"
                                        DockPanel.Dock="Right"
                                        Click="Rpt_Click"
                                        Margin="3">
                                        <Canvas Width="16" Height="16">
                                            <Path Width="28.504" Height="38.0053" Stretch="Fill"
                                                  Data="F1 M 26.9204,19.0027L 28.504,19.0027C 29.3785,19.0027 30.0875,19.7116 30.0875,20.5862L 30.0875,55.4244C 30.0875,56.299 29.3785,57.008 28.504,57.008L 26.9204,57.008C 26.0459,57.008 25.3369,56.299 25.3369,55.4244L 25.3369,20.5862C 25.3369,19.7116 26.0459,19.0027 26.9204,19.0027 Z M 31.6711,23.7533C 33.2546,22.6976 34.8382,21.6419 37.4775,21.9059C 40.1167,22.1698 43.8117,23.7535 46.7148,23.7535C 49.618,23.7535 51.7294,22.1698 53.8408,20.5862L 53.8408,34.838C 51.7294,36.4216 49.618,38.0052 46.7148,38.0052C 43.8117,38.0052 40.1167,36.4216 37.4775,36.1576C 34.8382,35.8937 33.2546,36.9494 31.6711,38.0051L 31.6711,23.7533 Z ">
                                                <Path.RenderTransform>  
                                                    <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                                                </Path.RenderTransform>
                                            </Path>
                                        </Canvas>
                                    </Button>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type spotify:Track}">
                        <!-- This is a search result -->
                        <Border Name="border" BorderBrush="Gray" BorderThickness="1" Padding="3" Margin="3">
                            <DockPanel>
                                <Image 
                                    DockPanel.Dock="Left"
                                    Height="60"
                                    Margin="3"
                                    Source="{ Binding Path=AlbumArt, Converter={StaticResource imageConverter} }" />
                                
                                <StackPanel>
                                    <TextBlock Text="{Binding Path=Name}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding Path=Album.Name}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding Path=AllArtists}" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                                <Button
                                    HorizontalAlignment="Right"
                                    HorizontalContentAlignment="Right"
                                    DockPanel.Dock="Right"
                                    Click="AddSong_Click"
                                    Margin="3">
                                    ADD
                                </Button>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.Resources>
            </ListBox>
        </Grid>

	    <GridSplitter Width="3" VerticalContentAlignment="Stretch"
		          HorizontalAlignment="Center"
		          ResizeDirection="Columns"
		          ShowsPreview="True"
		          Grid.Column="3"/>
        
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0"
                       FontWeight="Medium"
                       HorizontalAlignment="Center">
                Chat
            </TextBlock>
            
            <ListBox 
                Grid.Row="1"
                x:Name="chatbox"
                w:ListBox.AutoScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                HorizontalContentAlignment="Stretch">
                <ListBox.Resources>
                    <DataTemplate DataType="{x:Type models:ChatMessage}">
                        <TextBlock
                            TextWrapping="Wrap"
                            Text="{Binding Path=Message}" />
                    </DataTemplate>
                </ListBox.Resources>
            </ListBox>

            <DockPanel
                Grid.Row="2"
                LastChildFill="True">
                
                <Button 
                    HorizontalAlignment="Right" 
                    DockPanel.Dock="Right"
                    Click="SendChat">Send</Button>
                
                <TextBox 
                    x:Name="chatinput" 
                    KeyDown="Chatinput_OnKeyDown"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
